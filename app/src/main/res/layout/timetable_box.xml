<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timetable_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/timetable_heading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_timetable"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="?attr/themeColorInverse"
        android:paddingBottom="5dp" />

    <TextView
        android:id="@+id/timetable_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter courses you are enrolled in. Ex: CS 736"
        android:paddingBottom="5dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courses_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/add_course_button"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_add_24dp"
        android:padding="0dp"
        android:text="Add more courses"
        android:textSize="14sp" />


</LinearLayout>